    "compilerOptions": {
        "module": "node",
        "target": "es5",
        "moduleResolution": "node",

        "lib": [ "es2015", "es2016", "es2017", "dom" ],

        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,

        "baseUrl": "src",
        "paths": {
            "assets/*": [ "assets/*" ],
            "engine/*": [ "engine/*" ],
            "game/*": [ "game/*" ]
        }
    },
    "files": [
        "src/main.ts"
    ]
}